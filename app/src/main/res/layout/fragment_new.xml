<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".NewFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"><![CDATA[>

        ]]>

        <TextView
            android:id="@+id/add_split_txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="185dp"
            android:fontFamily="@font/righteous"
            android:text="@string/add_split_txt1"
            android:textColor="@color/complementary"
            android:textColorHint="@color/complementary"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="404dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_split_txt1"><![CDATA[>



            ]]>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rounded_layout_bg"
                android:backgroundTint="@color/white"
                tools:ignore="TextSizeCheck">

                <LinearLayout
                    android:layout_width="349dp"
                    android:layout_height="135dp"
                    android:orientation="vertical"
                    android:paddingBottom="25dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/add_split_txt2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="150dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/raleway_semibold"
                        android:text="@string/add_split_txt2"
                        android:textColor="@color/complementary"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/home_split_txt4"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginStart="60dp"
                        android:layout_marginEnd="20dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/righteous"
                        android:paddingStart="10dp"
                        android:paddingTop="15dp"
                        android:paddingEnd="10dp"
                        android:text="TextView"
                        android:textAlignment="center"
                        android:textColor="@color/complementary"
                        android:textSize="50sp" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/add_split_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:fontFamily="@font/righteous"
                android:text="@string/add_split_txt3"
                android:textColor="@color/complementary"
                android:textSize="21sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">>

                <LinearLayout
                    android:id="@+id/LinnearLayout2"
                    android:layout_width="344dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rounded_layout_bg"
                    android:orientation="horizontal"
                    android:paddingStart="30dp">

                    <TextView
                        android:id="@+id/add_split_txt5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/raleway"
                        android:gravity="center|center_vertical"
                        android:text="@string/add_split_txt5"
                        android:textAlignment="center"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/add_contacts_btn"
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="100dp"
                        android:fontFamily="@font/raleway_bold"
                        android:labelFor="@id/add_contacts_btn"
                        android:text="@string/add_split_btn2"
                        android:textAlignment="center"
                        android:textSize="35sp"
                        app:cornerRadius="120dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="354dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="45dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/rounded_layout_bg"
                    android:orientation="vertical"
                    android:paddingBottom="10dp">

                    <LinearLayout
                        android:layout_width="305dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="45dp"
                        android:orientation="horizontal"
                        android:paddingTop="10dp">

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="34dp"
                            android:layout_height="40dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/complementary"
                            android:src="@tools:sample/avatars"
                            app:srcCompat="@drawable/profile_icon" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/righteous"
                            android:text="TextView"
                            android:textColor="@color/complementary"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/raleway_semibold"
                            android:text="TextView"
                            android:textColor="@color/complementary"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <SeekBar
                        android:id="@+id/seekBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/main_blue"
                        android:progressTint="@color/main_blue" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>